{
  "overrides": [
    {
      "files": "*.sol",
      "options": {
        "bracketSpacing": false,
        "printWidth": 120,
        "tabWidth": 4,
        "useTabs": false,
        "singleQuote": false
      }
    },
    {
      "files": "*.ts",
      "options": {
        "printWidth": 145,
        "semi": true,
        "tabWidth": 2,
        "useTabs": false,
        "trailingComma": "es5"
      }
    },
    {
      "files": "*.js",
      "options": {
        "printWidth": 145,
        "semi": true,
        "tabWidth": 2,
        "useTabs": false,
        "trailingComma": "es5"
      }
    }
  ]
}
